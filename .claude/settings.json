{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Edit",
      "Write",
      "Task",
      "WebFetch",
      "WebSearch",
      "mcp__Ref__ref_search_documentation",
      "mcp__Ref__ref_read_url"
    ]
  },
  "enableExtendedThinking": true,
  "hooks": {
    "Stop": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "say Hey, your turn",
            "timeout": 10000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": {
          "toolName": "Write"
        },
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Writing file: will be created or overwritten'",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
